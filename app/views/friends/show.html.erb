<div class="jumbotron">

  <h1 class="display-4">
    <%= @friend.first_name%>
    <%= @friend.last_name%>
  </h1>

  <p class="lead">
    <%= @friend.email%> </br>
    <%= @friend.phone%> </br>
    <%= @friend.twitter%> </br>
  </p>

  </br>
  
  <div style="display:flex; flex-direction:row; gap:10px" >
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-warning" %>
    <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger" %>
  </div>

</div>


